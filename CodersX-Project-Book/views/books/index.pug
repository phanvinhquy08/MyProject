extends ../layout/common
block content  
  h2 LIST OF BOOK 
  a(href="/books/add" class="btn btn-primary") Add new book
  table(class="table")
    thead
      tr
        th Title
        th Description
        th  Action
    tbody
      each book in books
        tr
          td=book.title
          td=book.description
          td
            a(href="/books/edit/" + book.id) Edit
            a(href="/books/delete/" + book.id) Delete