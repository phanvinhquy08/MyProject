extends ../layout/common
block content    
    h1 Login
    if errors
        each error in errors
            .alert.alert-danger(role='alert')=error.msg
    form(action="/auth/login", method="POST")
        div(class="form-group")
            label(for="email") Email
            input(type="text", name="email", class="form-control", value=value ? values.email : "")
        div(class="form-group")
            label(for="password") Password
            input(type="password", name="password", class="form-control", value=value ? values.password : "")
        button(class="btn btn-primary") Login